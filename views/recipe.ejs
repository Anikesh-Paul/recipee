<%- include('partials/header') %>

<div class="max-w-7xl mx-auto px-6 lg:px-12 mb-60">
    <!-- Header Section -->
    <section class="grid grid-cols-1 lg:grid-cols-12 gap-16 py-32 md:py-48 animate-fade-up">
        <div class="lg:col-span-8 flex flex-col justify-end space-y-16">
            <div class="space-y-6">
                <a href="/" class="group inline-flex items-center gap-4 text-[11px] font-black uppercase tracking-[0.4em] text-[#cccccc] hover:text-black transition-colors focus-ring rounded">
                    <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path></svg>
                    Back to Archive
                </a>
                <h1 class="text-7xl md:text-[120px] font-black tracking-tighter leading-[0.8] text-black italic">
                    <%= recipe.title %>.
                </h1>
            </div>
            
            <p class="text-2xl md:text-4xl text-[#444444] font-light leading-snug max-w-4xl">
                <%= recipe.description %>
            </p>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-12 pt-16 border-t border-[#eeeeee]">
                <div class="space-y-3">
                    <div class="text-[10px] font-bold uppercase tracking-[0.4em] text-[#999999]">Originator</div>
                    <div class="text-xl font-black tracking-tighter italic"><%= recipe.author %></div>
                </div>
                <div class="space-y-3">
                    <div class="text-[10px] font-bold uppercase tracking-[0.4em] text-[#999999]">Complexity</div>
                    <div class="text-xl font-black tracking-tighter italic">Moderate Cycle</div>
                </div>
                <div class="space-y-3">
                    <div class="text-[10px] font-bold uppercase tracking-[0.4em] text-[#999999]">Duration</div>
                    <div class="text-xl font-black tracking-tighter italic">42 Min</div>
                </div>
                <div class="space-y-3">
                    <div class="text-[10px] font-bold uppercase tracking-[0.4em] text-[#999999]">Ref Code</div>
                    <div class="text-xl font-black tracking-tighter italic">SEQ.0<%= recipe.id %></div>
                </div>
            </div>
        </div>
        
        <div class="lg:col-span-4">
            <div class="image-reveal aspect-[4/5] bg-[#fafafa] border border-[#eeeeee] relative overflow-hidden group">
                <img src="<%= recipe.image %>" alt="<%= recipe.title %>" class="w-full h-full object-cover grayscale transition-all duration-[2s] group-hover:grayscale-0 group-hover:scale-105">
                <div class="absolute inset-0 border-[20px] border-white/10 pointer-events-none"></div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="grid grid-cols-1 lg:grid-cols-12 gap-16 md:gap-32 animate-fade-up stagger-1">
        <!-- Ingredients Sidebar -->
        <aside class="lg:col-span-4 lg:sticky lg:top-32 h-fit space-y-16">
            <div class="bg-[#fcfcfc] border border-[#eeeeee] p-12 md:p-16 space-y-12 hover:border-black transition-colors duration-500">
                <div class="flex items-center justify-between border-b border-[#eeeeee] pb-8">
                    <h2 class="text-[11px] font-black uppercase tracking-[0.5em]">Composition</h2>
                    <span class="text-[9px] font-bold text-[#cccccc]">Itemized</span>
                </div>
                <ul class="space-y-6">
                    <% 
                        const ingredients = Array.isArray(recipe.ingredients) 
                            ? recipe.ingredients 
                            : (typeof recipe.ingredients === 'string' ? recipe.ingredients.split('\n') : []);
                    %>
                    <% ingredients.forEach(ingredient => { %>
                        <li class="flex items-center justify-between group cursor-default">
                            <span class="text-xl font-light text-[#444444] group-hover:text-black transition-colors"><%= ingredient.trim() %></span>
                            <div class="w-2.5 h-2.5 rounded-full border-2 border-[#eeeeee] group-hover:bg-black group-hover:border-black transition-all"></div>
                        </li>
                    <% %>
                    <% }) %>
                </ul>
                <button class="w-full py-6 bg-black text-white text-[10px] font-black uppercase tracking-[0.4em] hover:bg-[#333333] transition-all transform hover:translate-y-[-4px] focus-ring">
                    Copy Checklist
                </button>
            </div>
        </aside>

        <!-- Instructions -->
        <main class="lg:col-span-8 space-y-32">
            <div class="space-y-16">
                <div class="flex items-center gap-8">
                    <h2 class="text-5xl font-black tracking-tighter italic whitespace-nowrap">Assembly Sequence.</h2>
                    <div class="w-full h-[2px] bg-[#eeeeee]"></div>
                </div>
                <div class="space-y-24">
                    <% 
                        const steps = Array.isArray(recipe.instructions) 
                            ? recipe.instructions 
                            : (typeof recipe.instructions === 'string' ? recipe.instructions.split('\n').filter(s => s.trim()) : []);
                    %>
                    <% steps.forEach((step, index) => { %>
                        <div class="grid grid-cols-1 md:grid-cols-12 gap-12 group">
                            <div class="md:col-span-1">
                                <span class="text-4xl font-black text-[#eeeeee] group-hover:text-black transition-colors duration-500">0<%= index + 1 %></span>
                            </div>
                            <div class="md:col-span-11 space-y-6 pt-2">
                                <p class="text-2xl md:text-3xl text-[#444444] font-light leading-relaxed group-hover:text-black transition-colors duration-500">
                                    <%= step.trim().replace(/\.$/, '') %>.
                                </p>
                                <div class="w-0 group-hover:w-full h-[1px] bg-black transition-all duration-700 opacity-20"></div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- Interaction Block -->
            <div class="pt-40 border-t-2 border-black flex flex-col md:flex-row items-center justify-between gap-16">
                <div class="space-y-4 text-center md:text-left">
                    <h3 class="text-2xl font-black tracking-tighter italic">Disseminate Knowledge.</h3>
                    <p class="text-base text-[#999999] font-light max-w-sm">Artifacts of this caliber must be shared with the broader culinary grid.</p>
                </div>
                <div class="flex flex-wrap justify-center gap-6">
                    <button class="px-12 py-5 border-2 border-black text-[11px] font-black uppercase tracking-[0.4em] hover:bg-black hover:text-white transition-all focus-ring rounded-lg">Export Artifact</button>
                    <button class="px-12 py-5 bg-[#fafafa] border border-[#eeeeee] text-[11px] font-black uppercase tracking-[0.4em] hover:border-black transition-all focus-ring rounded-lg">Copy Protocol Link</button>
                </div>
            </div>
        </main>
    </section>
</div>

<%- include('partials/footer') %>
